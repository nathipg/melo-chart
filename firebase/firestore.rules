rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /publicUsers/{userId} {
      allow create;
      allow read: if request.auth != null;
    }

    match /users/{userId} {
      allow create;
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }
    
    match /users/{userId}/songs/{document=**} {
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin;
    }

    match /songs/{songId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && (request.auth.uid in resource.data.editors || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin);
    }
  }
}
